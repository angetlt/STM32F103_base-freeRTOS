{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Make Build",
      "type": "shell",
      "command": "make -s -j 10",
      "options": {
        "cwd": "${workspaceRoot}",
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/C"
          ]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Make Clean",
      "type": "shell",
      "command": "make -s clean",
      "options": {
        "cwd": "${workspaceRoot}",
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/C"
          ]
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Write to Flash MCU",
      "type": "shell",
      "command": "JLink.exe -Device STM32F103VE -If SWD -Speed 1000 JLink\\FlashMCU.jlink",
      "options": {
        "cwd": "${workspaceRoot}",
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/C"
          ]
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Read Flash from MCU",
      "type": "shell",
      "command": "JLink.exe -Device STM32F103VE -If SWD -Speed 1000 JLink\\ReadMCU.jlink",
      "options": {
        "cwd": "${workspaceRoot}",
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/C"
          ]
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Erase Flash MCU",
      "type": "shell",
      "command": "JLink.exe -Device STM32F103VE -If SWD -Speed 1000 JLink\\EraseMCU.jlink",
      "options": {
        "cwd": "${workspaceRoot}",
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/C"
          ]
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Reset MCU",
      "type": "shell",
      "command": "JLink.exe -Device STM32F103VE -If SWD -Speed 1000 JLink\\ResetMCU.jlink",
      "options": {
        "cwd": "${workspaceRoot}",
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/C"
          ]
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Start GDB Server (Cortex-M3)",
      "type": "shell",
      "command": "start JLinkGDBServer.exe -select USB -device Cortex-M3 -if SWD -speed 1000 -ir",
      "options": {
        "cwd": "${workspaceRoot}",
        "shell": {
          "executable": "cmd.exe",
          "args": [
            "/C"
          ]
        }
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Build STM",
      "type": "process",
      "command": "${command:stm32-for-vscode.build}",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Flash STM",
      "type": "process",
      "command": "${command:stm32-for-vscode.flash}",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    }
  ]
}